// Um determinado sistema solicita que o usuário insira dois valores inteiros.
// Logo após, o sistema apresenta três opções de operações que poderão ser
// executadas, o usuário precisa escolher uma delas:
// [S] Soma
// [M] Multiplicação
// [B] Subtração.
// Caso contrário, se for uma opção inválida, o Sistema precisa notificar.

// Caso contrário, se for uma opção inválida, o Sistema precisa notificar.

// Considere o caractere maiúsculo ou minúsculo.
programa {
  funcao inicio() {
    real acao , n1 , n2
    cadeia opcao

    escreva("Qual operação você quer realizar ? ")
    leia(opcao)
    escreva("número 1 : ")
    leia(n1)
    escreva("número 2 : ")
    leia(n2)

    se (opcao == "M" ou opcao == "m"){
      acao = n1 * n2 
      escreva("resultado : ",acao )
    }senao se (opcao == "D" ou opcao == "d"){
      acao = n1 - n2
      escreva("resultado : ",acao )
    }senao se (opcao == "S" ou opcao == "s"){
      acao = n1 + n2 
      escreva("resultado : ",acao )
    }senao{
      escreva("opção inválida")
    }






  }
}
