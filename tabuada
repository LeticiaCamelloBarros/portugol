//Desenvolva um programa utilizando o para que faça a tabuada de um número inteiro
//que será digitado pelo usuário. Mas a tabuada não deve necessariamente iniciar em 1 e
//terminar em 10, o valor inicial e final devem ser informados pelo usuário.
//Segue um exemplo: Montar a tabuada do: 5
//Começar por: 4
//Terminar em: 7
//Saída de dados:
//5 x 4 = 20
//5 x 5 = 25
//5 x 6 = 30
//5 x 7 = 35

programa {
  funcao inicio() {
    // variáveis : numero da tabuada , numero de inicio , numero de final . 
    inteiro n_tab , n_i , n_f , cont , resultado 
    cadeia string
    // n_tab : numero da tabuada , n_i : numero de inicio  , n_f :  numero de final
    escreva("Qual o número você quer fazer a tabuada ? : ")
    leia(n_tab)
    escreva("Qual o número de inicio da tabuada ? : ")
    leia(n_i)
    escreva("Qual o número final da tabuada ? : ")
    leia(n_f)
    escreva("----------------------TaBuAdA---------------------"+"\n")
    para(cont = n_i ;cont<=n_f;cont++){
       resultado = n_tab * cont
       escreva(n_tab," x ",cont," = ",resultado,"\n")
    }


  }
}
